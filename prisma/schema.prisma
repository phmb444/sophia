generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model users {
  id       String   @id @map("_id")
  v        Int      @map("__v")
  dob      DateTime @db.Date
  email    String   @unique @map("email")
  name     String
  password String
  exercises exercises[]
  roteiros roteiros[]
  correcao correcao[]
  chat chat[]
}

model exercises {
  id String @id @map("_id")
  v  Int    @map("__v")
  date DateTime @db.Date
  params Json
  author users? @relation(fields: [authorId], references: [id])
  authorId String?
  content Json
}

model roteiros {
  id String @id @map("_id")
  v  Int    @map("__v")
  date DateTime @db.Date
  params Json
  author users? @relation(fields: [authorId], references: [id])
  authorId String?
  content Json
}

model correcao {
  id String @id @map("_id")
  v  Int    @map("__v")
  date DateTime @db.Date
  params Json
  author users? @relation(fields: [authorId], references: [id])
  authorId String?
  content Json
}

model chat {
  id String @id @map("_id")
  v  Int    @map("__v")
  date DateTime @db.Date
  params Json
  author users? @relation(fields: [authorId], references: [id])
  authorId String?
  content Json
  title String // New field for chat title
}


